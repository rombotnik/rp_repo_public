<div class="row">
  <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
    <% if params[:story_id] %>
      <%= render 'stories/nav', story: @resource, page_title: @note.title %>
    <% else %>
      <%= render 'characters/nav', character: @resource, page_title: @note.title %>
    <% end %>
    <h2><%= @note.title %></h2>
    <div class="quarantine">
      <%= sanitize @note.body %>
    </div>
  </div>
</div>
