<header class="main-header">
  <nav class="navbar navbar-toggleable-md navbar-inverse bg-primary mb-5">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <%= link_to root_path, class: 'navbar-brand' do %>
      <%= image_tag 'dragon', class: 'logo' %> RP
    <% end %>
    <div class="collapse navbar-collapse" id="navbarNav">
      <div class="navbar-nav mr-auto">
        <%= link_to 'Stories', stories_path, class: 'nav-item nav-link ' + (@current_section == 'Stories' ? 'active' : '') %>
        <%= link_to 'Characters', characters_path, class: 'nav-item nav-link ' + (@current_section == 'Characters' ? 'active' : '') %>
        <%= link_to 'Ideas', ideas_path, class: 'nav-item nav-link ' + (@current_section == 'Ideas' ? 'active' : '') %>
      </div>
      <div class="navbar-nav">
          <li class="nav-item dropdown">
            <%= link_to '#', id: 'navbarDropdownMenuLink', class: 'nav-link dropdown-toggle', data: { toggle: 'dropdown' } do %>
              <span class="ml-1"><%= current_user %></span>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right">
              <%= link_to destroy_user_session_path, method: :delete, class: 'dropdown-item' do %>
                <%= icon('sign-out') %> <span class="ml-1">Sign out</span>
              <% end %>
              <div class="dropdown-divider"></div>
              <%= link_to 'Manage Genres', genres_path, class: 'dropdown-item' %>
              <%= link_to 'Manage Users', users_path, class: 'dropdown-item' %>
            </div>
          </li>
      </div>
    </div>
  </nav>
</header>